#!/bin/sh

#
# Simple script for the terminal that mimics the operation of AdvancedNewFile (Vim plugin)
#
# Author: Andros Fenollosa
# License: MIT
#


for f in "$@"
do
  dir="${f%/*}"
  file="${f##*/}"

  if [ -n "$dir" ]; then
	mkdir -p "$dir"
  fi
  if [ -n "$file" ]; then
    touch "./$dir/$file"
  fi
done
